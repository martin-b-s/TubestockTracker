<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tt="clr-namespace:TubestockTracker"
             x:Class="TubestockTracker.MainPage"
             x:DataType="tt:MainViewModel">

    <Grid RowSpacing="8" ColumnSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"  />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" ItemsSource="{Binding Records}" Margin="8">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="tt:StockRecord">
                    <TextCell Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
                x:Name="AddBtn"
                Grid.Row="1"
                Text="Add" 
                Clicked="OnAddClicked"
                Margin="8"
                HorizontalOptions="Fill" />
    </Grid>

</ContentPage>
